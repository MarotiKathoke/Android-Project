<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg14">
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:fillViewport="true">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/select_semester_for_student"
    android:layout_width="match_parent"
    android:background="@drawable/bg14"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.shubham.onlineattendance.SelectSemesterForStudent">
    <TextView
        android:text="SelectSemester"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView11"
        tools:ignore="HardcodedText"
        android:textStyle="bold|italic"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#e0ffff" />

    <Button
        android:text="Get_attendace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Getattendance"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold|italic"
        tools:ignore="HardcodedText,TextViewEdits,UnusedAttribute"
        android:contextClickable="true"
        android:cursorVisible="true"
        android:onClick="GetAttendance"/>

    <TextView
        android:text="@string/NoteForSemester"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView12"
        android:textStyle="italic"
        android:textColor="#e0ffff"
        tools:ignore="HardcodedText"
        android:layout_above="@+id/Getattendance"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="UselessLeaf"
        android:paddingLeft="10dp"
        android:id="@+id/Rgbutoon"
        android:layout_below="@+id/textView11"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="36dp">

        <RadioButton
            android:text="Third Semester"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/Third"
            android:textColor="#e0ffff"
            android:textSize="18sp"
            android:textStyle="normal|bold|italic"
            tools:ignore="HardcodedText" />

        <RadioButton
            android:text="Forth Semester"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/Forth"
            android:textColor="#e0ffff"
            android:textSize="17sp"
            android:textStyle="bold|italic"
            tools:ignore="HardcodedText" />

        <RadioButton
            android:text="Fifth Semester"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/Fifths"
            tools:ignore="HardcodedText"
            android:textStyle="bold|italic"
            android:textSize="17sp"
            android:textColor="#e0ffff" />

        <RadioButton
            android:text="Sixth Semester"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/sixths"
            tools:ignore="HardcodedText"
            android:textSize="17sp"
            android:textStyle="bold|italic"
            android:textColor="#e0ffff" />

        <RadioButton
            android:text="Seventh Semester"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Seventh"
            tools:ignore="HardcodedText"
            android:textStyle="bold|italic"
            android:textSize="17sp"
            android:textColor="#e0ffff" />

        <RadioButton
            android:text="Eight Semester"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Eights"
            android:layout_marginTop="20dp"
            tools:ignore="HardcodedText"
            android:textStyle="bold|italic"
            android:textColor="#e0ffff"
            android:textSize="17sp" />

    </RadioGroup>


</RelativeLayout>
</ScrollView></RelativeLayout>