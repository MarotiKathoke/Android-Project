<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg14">
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:fillViewport="true">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/select_profetion"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/bg14"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.shubham.onlineattendance.SelectProfetion">

    <TextView
        android:text="SelectProfession"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView14"
        android:textStyle="normal|bold|italic"
        android:textSize="24sp"
        android:textColor="#e0ffff"
        tools:ignore="HardcodedText" />

    <ImageView
        app:srcCompat="@drawable/teacher"
        android:id="@+id/imageView5"
        android:layout_height="100dp"
        android:layout_width="100dp"
        android:layout_below="@+id/textView14"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="35dp"
        tools:ignore="ContentDescription" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/parents"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/imageView6"
        tools:ignore="ContentDescription" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/students"
        android:id="@+id/imageView7"
        android:layout_below="@+id/imageView6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        tools:ignore="ContentDescription" />

    <Button
        android:text="continue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/continues"
        android:textStyle="normal|bold|italic"
        android:elevation="0dp"
        tools:ignore="HardcodedText,UnusedAttribute"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Rgbutoon1"
        tools:ignore="UselessLeaf"
        android:paddingLeft="120dp"
        android:layout_alignBottom="@+id/imageView7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RadioButton
            android:text="Teachers"
            android:layout_width="wrap_content"
            android:id="@+id/teacher"
            tools:ignore="HardcodedText"
            android:textSize="18sp"
            android:textStyle="normal|bold|italic"
            android:textColor="#e0ffff"
            android:layout_height="80dp"
            android:layout_alignTop="@+id/imageView5"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_weight="1" />


        <RadioButton
            android:text="Parents"
            android:layout_width="match_parent"
            android:id="@+id/parents"
            tools:ignore="HardcodedText"
            android:layout_height="110dp"
            android:textSize="18sp"
            android:textStyle="normal|bold|italic"
            android:textColor="#e0ffff" />

        <RadioButton
            android:text="Students"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:id="@+id/Students"
            tools:ignore="HardcodedText"
            android:textStyle="normal|bold|italic"
            android:textColor="#e0ffff"
            android:textSize="18sp" />


    </RadioGroup>

</RelativeLayout>
</ScrollView></RelativeLayout>