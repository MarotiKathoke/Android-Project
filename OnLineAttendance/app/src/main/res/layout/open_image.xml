<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg14">
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:fillViewport="true">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/open_image"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:background="@drawable/bg14"
    android:orientation="vertical"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context="com.example.shubham.onlineattendance.OpenImage">

    <TextView
        android:layout_width="fill_parent"
        android:text="DownloadImages"
        android:textAlignment="center"
        android:textStyle="bold|italic"
        android:textColor="#e0fff0"
        android:layout_marginTop="10dp"
        android:textSize="22sp"
        android:layout_marginBottom="5dip"
        android:layout_height="wrap_content"
        android:id="@+id/textView8"
        tools:ignore="HardcodedText" />
    <ListView
        android:id="@android:id/list"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="3dp"
        android:layout_width="match_parent"
        android:layout_height="385dp"
        tools:ignore="InefficientWeight,ObsoleteLayoutParam,RtlHardcoded"
        android:layout_marginBottom="21dp"
        android:layout_above="@+id/button2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_weight="0.64"
        android:visibility="visible">
    </ListView>


</LinearLayout>
</ScrollView></RelativeLayout>