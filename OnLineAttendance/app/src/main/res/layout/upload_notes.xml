<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg14">
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:fillViewport="true">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/upload_notes"
    android:layout_width="match_parent"
    android:background="@drawable/bg14"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    tools:context="com.example.shubham.onlineattendance.UploadNotes"
    android:weightSum="1">

<TextView
    android:layout_width="wrap_content"
    android:text="Select a Semester"
    android:textColor="#e0fff0"
    android:layout_marginTop="20dp"
    android:textStyle="bold|italic"
    android:textSize="15dp"
    android:layout_height="wrap_content"
    tools:ignore="HardcodedText,SpUsage" />
    <Spinner
        android:id="@+id/spinner"
        android:popupBackground="#FFFF99"
        android:layout_width="fill_parent"
        android:prompt="@string/semester"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:text="Select A Subject"
        android:textColor="#e0fff0"
        android:layout_marginTop="20dp"
        android:textStyle="bold|italic"
        android:textSize="15sp"
        android:layout_height="wrap_content"
        tools:ignore="HardcodedText" />
    <Spinner
        android:id="@+id/spinner1"
        android:popupBackground="#FFFF99"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp" />
    <TextView
        android:layout_width="wrap_content"
        android:text="Get A File"
        android:textColor="#e0fff0"
        android:layout_marginTop="20dp"
        android:textStyle="bold|italic"
        android:textSize="15sp"
        android:layout_height="wrap_content"
        tools:ignore="HardcodedText" />
    <Spinner
        android:id="@+id/spinner2"
        android:popupBackground="#FFFF99"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:prompt="@string/fileType"
        android:layout_marginTop="10dp" />
    <TextView
        android:layout_width="wrap_content"
        android:text="Enter Your File Name"
        android:textColor="#e0fff0"
        android:layout_marginTop="20dp"
        android:textStyle="bold|italic"
        android:textSize="15sp"
        android:layout_height="wrap_content"
        tools:ignore="HardcodedText" />
    <EditText
        android:layout_width="match_parent"
        android:textColor="#e0fff0"
        android:textStyle="italic"
        android:id="@+id/edit1"
        android:textSize="12sp"
        android:layout_height="50dp"
        tools:ignore="TextFields" />

    <TextView
        android:layout_width="wrap_content"
        android:text="Enter A Submition Date"
        android:textColor="#e0fff0"
        android:layout_marginTop="20dp"
        android:textStyle="bold|italic"
        android:textSize="15sp"
        android:layout_height="wrap_content"
        tools:ignore="HardcodedText"
        android:id="@+id/textView18" />

    <EditText
        android:layout_width="match_parent"
        android:textColor="#e0fff0"
        android:textStyle="italic"
        android:id="@+id/edit2"
        android:textSize="12sp"
        android:layout_height="50dp"
        tools:ignore="TextFields" />
    <TextView
        android:layout_width="match_parent"
        android:textColor="#e0fff0"
        android:layout_height="wrap_content" />
    <Button
        android:layout_width="match_parent"
        android:text="@string/Submit"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="10dp"
        android:id="@+id/submit1"
        android:textStyle="bold|italic"
        android:layout_height="wrap_content" />

</LinearLayout></ScrollView></RelativeLayout>