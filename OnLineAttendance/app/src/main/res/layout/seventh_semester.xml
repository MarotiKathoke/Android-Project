<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg14">
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:fillViewport="true">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/seventh_semester"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg14"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.shubham.onlineattendance.SeventhSemester">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:shrinkColumns="*"
        android:stretchColumns="*"
        tools:ignore="UselessParent">
        <TableRow
            android:id="@+id/tableRow1"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">
            <TextView
                android:id="@+id/RollNo"
                android:text="Roll No"
                android:layout_weight="1"
                android:textColor="#ffffff"
                android:width="55dp"
                android:textSize="17sp"
                android:gravity="left"
                tools:ignore="HardcodedText,RtlHardcoded" />
            <TextView
                android:id="@+id/FirstName" android:text="Frist Name"
                android:layout_weight="1"
                android:textColor="#ffffff"
                android:width="75dp"
                android:textSize="17sp"
                android:gravity="left"
                tools:ignore="HardcodedText,RtlHardcoded" />

            <TextView
                android:id="@+id/LastName"
                android:layout_weight="1"
                android:textColor="#ffffff"
                android:textSize="17sp"
                android:width="75dp"
                android:text="Last Name"
                android:gravity="left"
                tools:ignore="HardcodedText,RtlHardcoded" />

            <TextView
                android:id="@+id/vs" android:text="P/A"
                android:layout_weight="1"
                android:textColor="#ffffff"
                android:textSize="17sp"
                android:gravity="center"
                tools:ignore="HardcodedText" />
        </TableRow>
    </TableLayout>



    <ListView
        android:id="@+id/lv5"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="3dp"
        android:layout_width="match_parent"
        android:layout_height="385dp"
        tools:ignore="InefficientWeight,ObsoleteLayoutParam,RtlHardcoded"
        android:layout_marginBottom="21dp"
        android:layout_above="@+id/button2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_weight="0.64">
    </ListView>

    <Button
        android:text="@string/Submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button2"
        tools:ignore="HardcodedText"
        android:layout_gravity="bottom"
        android:textStyle="normal|italic"
        android:textSize="20sp"
        />


</LinearLayout>
</ScrollView></RelativeLayout>