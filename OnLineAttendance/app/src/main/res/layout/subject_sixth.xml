<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg14">
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:fillViewport="true">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/subject_sixth"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/bg14"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.shubham.onlineattendance.SubjectSixth">


    <Button
        android:layout_width="fill_parent"
        android:text="add Subject"
        android:id="@+id/sbok"
        android:textStyle="italic|bold"
        android:layout_gravity="bottom"
        android:layout_height="wrap_content"
        tools:ignore="HardcodedText"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:hint="Add A Subject"
        android:textColorHint="#eee0ff"
        android:textColor="#e0fff0"
        android:id="@+id/newsub"
        android:textStyle="bold|italic"
        android:layout_height="wrap_content"
        tools:ignore="HardcodedText"
        android:layout_above="@+id/sbok"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="SelectASubject"
        android:layout_width="wrap_content"
        android:textAlignment="center"
        android:textColor="#e0fff0"
        android:textStyle="italic|bold"
        android:textSize="20sp"
        android:layout_height="wrap_content"
        android:id="@+id/textView16"
        tools:ignore="HardcodedText"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/attendance"
        android:id="@+id/imageView2"
        tools:ignore="ContentDescription"
        android:layout_marginBottom="24dp"
        android:layout_above="@+id/newsub"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Spinner
        android:id="@+id/spinner"
        android:popupBackground="#FFFF99"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="28dp"
        android:layout_above="@+id/ivUpload"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:text="Get_Presents"
        android:layout_height="wrap_content"
        android:textStyle="bold|italic"
        android:id="@+id/ivUpload"
        android:layout_gravity="bottom"
        tools:ignore="ContentDescription,HardcodedText"
        android:layout_marginBottom="15dp"
        android:layout_above="@+id/imageView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
</ScrollView></RelativeLayout>